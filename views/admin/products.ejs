<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>

<main>
  <%- include('../includes/pagination.ejs') %>
  <div class="grid">
    <% if(prods.length === 0) {  %>
      <h2 class="centered">No products found! Please add some</h2>
    <% } %>
    <% for(prod of prods) { %>
    <article class="card product-item">
      <header class="card__header">
        <h1 class="product__title"><%= prod.title %></h1>
      </header>
      <div class="card__image">
        <img
          src="<%- prod.imageUrl %>"
          alt="A Book"
        />
      </div>
      <div class="card__content">
        <h2 class="product__price">$ <%= prod.price %></h2>
        <p class="product__description ellipsis--3">
          <%= prod.description %>
        </p>
      </div>
      <div class="card__actions">
        <a href="/admin/edit-product/<%= prod._id || prod.id %>"><button class="btn">Edit</button></a>
        <form action="/admin/product/delete/<%= prod._id || prod.id %>" method="POST" style="display: inline; margin: 0; padding: 0;">
          <button type="submit" class="btn">Delete</button>
        </form>
      </div>
    </article>
    <% } %>
  </div>
  <%- include('../includes/pagination.ejs') %>
</main>
<%- include('../includes/end.ejs') %>
